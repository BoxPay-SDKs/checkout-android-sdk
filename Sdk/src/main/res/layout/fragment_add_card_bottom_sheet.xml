<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@drawable/bottom_sheet_bg">

    <FrameLayout
        android:id="@+id/frameLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout123"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_sheet_bg"
                app:layout_anchorGravity="center">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Payment Details"
                    android:textColor="#2D2B32"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/backButton"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/chevron_left" />
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="1dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true"
                        android:paddingStart="14dp"
                        android:paddingTop="15dp"
                        android:paddingEnd="14dp"
                        android:paddingBottom="20dp">

                        <TextView
                            android:id="@+id/nameOnCard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:fontFamily="@font/poppins"
                            android:gravity="center_vertical"
                            android:lineSpacingExtra="-1sp"
                            android:text="Name on card*"
                            android:textColor="#2D2B32"
                            app:layout_constraintStart_toStartOf="@+id/linearLayout3"
                            app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

                        <EditText
                            android:id="@+id/editTextNameOnCard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edittext_bg"
                            android:fontFamily="@font/poppins"
                            android:gravity="center_vertical"
                            android:hint="Please enter name on your card"
                            android:inputType="text"
                            android:paddingStart="12dp"

                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:textColor="#000000"
                            android:textColorHint="#7F7D83"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="@+id/nameOnCard"
                            app:layout_constraintTop_toBottomOf="@+id/nameOnCard"
                            tools:ignore="TouchTargetSizeCheck" />

                        <LinearLayout
                            android:id="@+id/nameOnCardErrorLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            app:layout_constraintStart_toStartOf="@+id/editTextNameOnCard"
                            app:layout_constraintTop_toBottomOf="@+id/editTextNameOnCard">

                            <ImageView
                                android:id="@+id/imageView10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/error_outline" />

                            <TextView
                                android:id="@+id/textView17"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="2dp"
                                android:layout_marginBottom="3dp"
                                android:enabled="false"
                                android:fontFamily="@font/poppins"
                                android:gravity="center_vertical|left"
                                android:text="Enter Name"
                                android:textColor="#B9232F"
                                android:textSize="12sp" />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/ll_loader_dcc_and_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="visible"
                            app:layout_constraintStart_toStartOf="@+id/nameOnCardErrorLayout"
                            app:layout_constraintTop_toBottomOf="@+id/nameOnCardErrorLayout">


                            <FrameLayout
                                android:id="@+id/fl_loader_and_dcc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                >

                                <LinearLayout
                                    android:id="@+id/ll_loader"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:visibility="gone"
                                    app:layout_constraintStart_toStartOf="@+id/nameOnCardErrorLayout"
                                    app:layout_constraintTop_toBottomOf="@+id/nameOnCardErrorLayout">

                                    <ProgressBar
                                        android:id="@+id/circularProgressBar"
                                        android:layout_width="wrap_content"
                                        android:layout_height="30dp"
                                        android:layout_gravity="center"
                                        android:indeterminate="false"
                                        android:indeterminateDrawable="@drawable/loader_background"
                                        android:max="100"
                                        android:progress="20" />

                                    <TextView
                                        android:id="@+id/loading_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:enabled="false"
                                        android:fontFamily="@font/poppins"
                                        android:text="Please wait. We are fetching available currencies"
                                        android:textColor="#4F4D55"
                                        android:textSize="12sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/ll_dcc_options"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:orientation="vertical"
                                    android:visibility="gone"
                                    app:layout_constraintStart_toStartOf="@+id/ll_loader"
                                    app:layout_constraintTop_toBottomOf="@+id/ll_loader">

                                    <TextView
                                        android:id="@+id/tv_select_currency"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:enabled="false"
                                        android:gravity="start"
                                        android:fontFamily="@font/poppins"
                                        android:text="Please Select Currency"
                                        android:textColor="#000000"
                                        android:textSize="12sp" />


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:weightSum="2"
                                        android:layout_marginTop="5dp"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            android:layout_weight="0.8"
                                            android:weightSum="3">

                                            <com.google.android.material.radiobutton.MaterialRadioButton
                                                android:id="@+id/radioButton_1"
                                                android:layout_width="0dp"
                                                android:layout_weight="0.8"
                                                android:buttonTint="#FF0023"
                                                android:layout_height="30dp"/>

                                            <androidx.cardview.widget.CardView
                                                android:layout_width="0dp"
                                                android:layout_height="20dp"
                                                android:layout_weight="0.8"
                                                android:layout_gravity="center"
                                                app:cardElevation="0dp">

                                                <ImageView
                                                    android:id="@+id/country_flag_1"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:scaleType="centerCrop"
                                                    android:src="@drawable/mastercard" />

                                            </androidx.cardview.widget.CardView>

                                            <TextView
                                                android:id="@+id/country_code_1"
                                                android:layout_width="0dp"
                                                android:layout_height="30dp"
                                                android:fontFamily="@font/poppins"
                                                android:text="PHP"
                                                android:layout_weight="1.4"
                                                android:textColor="#000000"
                                                android:gravity="center"
                                                android:textSize="16sp" />

                                        </LinearLayout>

                                        <TextView
                                            android:id="@+id/details_text_1"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/poppins"
                                            android:text=""
                                            android:textSize="12sp"
                                            android:layout_weight="1.2"
                                            android:textColor="#000000"
                                            android:gravity="start"
                                            />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:weightSum="2"
                                        android:layout_marginTop="5dp"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            android:layout_weight="0.8"
                                            android:weightSum="3">

                                            <com.google.android.material.radiobutton.MaterialRadioButton
                                                android:id="@+id/radioButton_2"
                                                android:layout_width="0dp"
                                                android:layout_weight="0.8"
                                                android:buttonTint="#FF0023"
                                                android:layout_height="30dp"
                                                />

                                            <androidx.cardview.widget.CardView
                                                android:layout_width="0dp"
                                                android:layout_height="20dp"
                                                android:layout_gravity="center"
                                                android:layout_weight="0.8"
                                                app:cardElevation="0dp">

                                                <ImageView
                                                    android:id="@+id/country_flag_2"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:scaleType="centerCrop"
                                                    android:src="@drawable/mastercard" />

                                            </androidx.cardview.widget.CardView>

                                            <TextView
                                                android:id="@+id/country_code_2"
                                                android:layout_width="0dp"
                                                android:layout_height="30dp"
                                                android:fontFamily="@font/poppins"
                                                android:text=""
                                                android:layout_weight="1.4"
                                                android:textColor="#000000"
                                                android:gravity="center"
                                                android:textSize="16sp" />

                                        </LinearLayout>

                                        <TextView
                                            android:id="@+id/details_text_2"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/poppins"
                                            android:text=""
                                            android:textSize="12sp"
                                            android:layout_weight="1.2"
                                            android:textColor="#000000"
                                            android:gravity="start" />

                                    </LinearLayout>

                                </LinearLayout>

                            </FrameLayout>

                            <TextView
                                android:id="@+id/tv_info_dcc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="0dp"
                                android:gravity="fill"
                                android:ellipsize="none"
                                android:visibility="gone"
                                app:layout_constraintTop_toBottomOf="@+id/fl_loader_and_dcc"
                                android:textSize="12sp"
                                android:textColor="#2D2B32"
                                android:layout_marginTop="10dp"
                                android:text=""
                                />

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/linearLayout3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:orientation="vertical"
                            app:layout_constraintStart_toStartOf="@+id/cardNumberLinearLayout"
                            app:layout_constraintTop_toBottomOf="@+id/cardNumberLinearLayout">

                            <TextView
                                android:id="@+id/cardValidityTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins"
                                android:gravity="center_vertical"
                                android:lineSpacingExtra="-1sp"
                                android:text="Validity*"
                                android:textColor="#2D2B32" />

                            <EditText
                                android:id="@+id/editTextCardValidity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/edittext_bg"
                                android:fontFamily="@font/poppins"
                                android:gravity="center_vertical"
                                android:hint="MM/YY"
                                android:inputType="number"
                                android:maxLength="4"
                                android:paddingStart="12dp"
                                android:paddingTop="8dp"
                                android:paddingEnd="60dp"
                                android:paddingBottom="8dp"
                                android:textColor="#000000"
                                android:textColorHint="#7F7D83"
                                android:textSize="14sp"
                                tools:ignore="TouchTargetSizeCheck" />

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/invalidCardValidity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical|top">

                                <ImageView
                                    android:id="@+id/imageView6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="3dp"
                                    android:src="@drawable/error_outline"
                                    app:layout_constraintBottom_toBottomOf="@+id/textView7"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="@+id/textView7" />

                                <TextView
                                    android:id="@+id/textView7"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="2dp"
                                    android:enabled="false"
                                    android:fontFamily="@font/poppins"
                                    android:gravity="center_vertical|left"
                                    android:text="Required"
                                    android:textColor="#B9232F"
                                    android:textSize="12sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/imageView6"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintVertical_bias="0.0" />

                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:orientation="vertical"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/cardNumberLinearLayout">

                            <TextView
                                android:id="@+id/cardCVVTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins"
                                android:gravity="center_vertical"
                                android:lineSpacingExtra="-1sp"
                                android:text="CVV*"
                                android:textColor="#2D2B32" />

                            <EditText
                                android:id="@+id/editTextCardCVV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/edittext_bg"
                                android:fontFamily="@font/poppins"
                                android:gravity="center_vertical"
                                android:hint="Enter CVV"
                                android:inputType="numberPassword"
                                android:maxLength="4"
                                android:paddingStart="12dp"
                                android:paddingTop="8dp"
                                android:paddingEnd="60dp"
                                android:paddingBottom="8dp"
                                android:textColor="#000000"
                                android:textColorHint="#7F7D83"
                                android:textSize="14sp"
                                tools:ignore="TouchTargetSizeCheck" />

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/invalidCVV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical|top">

                                <ImageView
                                    android:id="@+id/imageView7"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="3dp"
                                    android:src="@drawable/error_outline"
                                    app:layout_constraintBottom_toBottomOf="@+id/textView8"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="@+id/textView8" />

                                <TextView
                                    android:id="@+id/textView8"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="2dp"
                                    android:fontFamily="@font/poppins"
                                    android:gravity="center"
                                    android:text="Required"
                                    android:textColor="#B9232F"
                                    android:textSize="12sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/imageView7"
                                    app:layout_constraintTop_toTopOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </LinearLayout>


                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_marginBottom="4dp"
                            android:src="@drawable/card_02"
                            app:layout_constraintBottom_toBottomOf="@+id/textView2"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/textView2" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="2dp"
                            android:fontFamily="@font/poppins_bold"
                            android:gravity="center"
                            android:text="Card Details"
                            android:textColor="#2D2B32"
                            android:textSize="20sp"
                            app:layout_constraintStart_toEndOf="@+id/imageView"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/texthead_Enter_UPI"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/poppins"
                            android:gravity="center_vertical"
                            android:lineSpacingExtra="-1sp"
                            android:text="Enter card number*"
                            android:textColor="#2D2B32"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView2" />

                        <LinearLayout
                            android:id="@+id/cardNumberLinearLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/imageView"
                            app:layout_constraintTop_toBottomOf="@+id/texthead_Enter_UPI">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/edittext_bg"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:padding="2dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/texthead_Enter_UPI">

                                <EditText
                                    android:id="@+id/edit_text_card_number"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@drawable/white_bg_edittext"
                                    android:fontFamily="@font/poppins"
                                    android:gravity="center_vertical"
                                    android:hint="XXXX XXXX XXXX XXXX"
                                    android:inputType="number"
                                    android:maxLength="19"
                                    android:paddingStart="12dp"
                                    android:paddingTop="8dp"
                                    android:paddingBottom="8dp"
                                    android:textColor="#000000"
                                    android:textColorHint="#7F7D83"
                                    android:textSize="14sp"
                                    tools:ignore="TouchTargetSizeCheck" />

                                <LinearLayout
                                    android:id="@+id/cardNetworkDrawableLinearLayout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:paddingEnd="12dp">

                                    <LinearLayout
                                        android:id="@+id/defaultCardNetworkLinearLayout"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:id="@+id/cardNetwork1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/mastercard" />

                                        <ImageView
                                            android:id="@+id/cardNetwork2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="2dp"
                                            android:src="@drawable/visa" />

                                        <ImageView
                                            android:id="@+id/cardNetwork3"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="2dp"
                                            android:src="@drawable/discover" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/fetchedCardNetwork"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:orientation="horizontal"
                                        android:visibility="gone">

                                    </LinearLayout>


                                </LinearLayout>


                            </LinearLayout>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/ll1InvalidCardNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical|top"
                                android:paddingStart="4dp">

                                <ImageView
                                    android:id="@+id/imageView5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="3dp"
                                    android:src="@drawable/error_outline"
                                    app:layout_constraintBottom_toBottomOf="@+id/textView4"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="@+id/textView4" />

                                <TextView
                                    android:id="@+id/textView4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="2dp"
                                    android:enabled="false"
                                    android:fontFamily="@font/poppins"
                                    android:gravity="center"
                                    android:text="Required"
                                    android:textColor="#B9232F"
                                    android:textSize="12sp"

                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/imageView5"
                                    app:layout_constraintTop_toTopOf="parent" />
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/saveCardLinearLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            app:layout_constraintStart_toStartOf="@+id/nameOnCardErrorLayout"
                            app:layout_constraintTop_toBottomOf="@+id/nameOnCardErrorLayout"
                            app:layout_goneMarginBottom="8dp">


                            <ImageView
                                android:id="@+id/imageView3"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:background="@drawable/check_box_bg" />

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_marginBottom="2dp"
                                android:fontFamily="@font/poppins"
                                android:gravity="center_vertical"
                                android:text="Save your card"
                                android:textColor="#2D2B32"
                                android:textSize="12sp" />
                        </LinearLayout>


                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/proceedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="36dp"
                    android:layout_marginEnd="16dp"
