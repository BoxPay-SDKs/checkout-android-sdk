<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/frameLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout123"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bottom_sheet_bg">


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Add New Address"
                android:textColor="#2D2B32"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <LinearLayout
                android:id="@+id/backButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="gone">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/chevron_left" />
            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                app:layout_constraintBottom_toTopOf="@id/proceedButton"
                app:layout_constrainedHeight="true">

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="vertical"
                    android:fadeScrollbars="false">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true"
                        android:paddingStart="14dp"
                        android:paddingTop="20dp"
                        android:paddingEnd="14dp"
                        android:paddingBottom="30dp">

                        <LinearLayout
                            android:id="@id/fullNameLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/fullNameTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:gravity="center_vertical"
                            android:lineSpacingExtra="-1sp"
                            android:text="Full Name*"
                            android:textColor="@android:color/black" />

                        <EditText
                            android:id="@+id/fullNameEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:background="@drawable/edittext_bg"
                            android:fontFamily="@font/poppins"
                            android:gravity="center_vertical"
                            android:hint="Full Name"
                            android:inputType="text"
                            android:padding="8dp"
                            android:textColor="#000000"
                            android:textColorHint="#7F7D83"
                            android:textSize="14sp"
                            tools:ignore="TouchTargetSizeCheck" />

                        <TextView
                            android:id="@+id/fullNameErrorTex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:fontFamily="@font/poppins"
                            android:gravity="center_vertical"
                            android:lineSpacingExtra="-1sp"
                            android:text="Required"
                            android:visibility="invisible"
                            android:textColor="#ffff4d4f" />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@id/mobileNumberLayout"
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="match_parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/fullNameLayout">
                            <TextView
                                android:id="@+id/mobileNumberTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins"
                                android:gravity="center_vertical"
                                android:lineSpacingExtra="-1sp"
                                android:text="Mobile Number*"
                                android:textColor="@android:color/black" />

                            <LinearLayout
                                android:id="@+id/mobileNumberLinearLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginStart="2dp"
                                android:layout_marginEnd="2dp"
                                android:background="@drawable/edittext_bg">

                                <com.boxpay.checkout.sdk.adapters.InstantAutoComplete
                                    android:id="@+id/spinner_dial_codes"
                                    android:layout_width="44dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="4dp"
                                    android:background="#ffffffff"
                                    android:inputType="number"
                                    android:textSize="14sp"
                                    tools:ignore="TouchTargetSizeCheck" />

                                <EditText
                                    android:id="@+id/mobileNumberEditText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/edittext_bg"
                                    android:fontFamily="@font/poppins"
                                    android:gravity="center_vertical"
                                    android:hint="Mobile Number"
                                    android:inputType="phone"
                                    android:padding="8dp"
                                    android:textColor="#000000"
                                    android:textColorHint="#7F7D83"
                                    android:textSize="14sp"
                                    tools:ignore="TouchTargetSizeCheck" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/mobileErrorText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:fontFamily="@font/poppins"
                                android:gravity="center_vertical"
                                android:lineSpacingExtra="-1sp"
                                android:text="Mobile Number length is not correct"
                                android:visibility="invisible"
                                android:textColor="#ffff4d4f"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/emailLayout"
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="match_parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/mobileNumberLayout" >

                            <TextView
                                android:id="@+id/emailTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins"
                                android:gravity="center_vertical"
                                android:lineSpacingExtra="-1sp"
                                android:text="Email*"
                                android:textColor="@android:color/black" />

                            <EditText
                                android:id="@+id/emailEditText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/edittext_bg"
                                android:fontFamily="@font/poppins"
                                android:gravity="center_vertical"
                                android:layout_marginStart="2dp"
                                android:layout_marginEnd="2dp"
                                android:hint="Email address"
                                android:inputType="text"
                                android:padding="8dp"
                                android:textColor="#000000"
                                android:textColorHint="#7F7D83"
                                android:textSize="14sp"
                                tools:ignore="TouchTargetSizeCheck" />

                            <TextView
                                android:id="@+id/emailErrorText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:fontFamily="@font/poppins"
                                android:gravity="center_vertical"
                                android:lineSpacingExtra="-1sp"
                                android:text="Invalid Email Id"
                                android:visibility="invisible"
                                android:textColor="#ffff4d4f" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/panLayout"
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:layout_height="match_parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/emailLayout" >

                            <TextView
                                android:id="@+id/panTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins"
                                android:gravity="center_vertical"
                                android:lineSpacingExtra="-1sp"
                                android:text="PAN*"
                                android:textColor="@android:color/black" />

                            <EditText
                                android:id="@+id/panEditText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/edittext_bg"
                                android:fontFamily="@font/poppins"
                                android:gravity="center_vertical"
                                android:hint="PAN"
                                android:inputType="text"
                                android:padding="8dp"
                                android:textColor="#000000"
                                android:textColorHint="#7F7D83"
                                android:textSize="14sp"
                                tools:ignore="TouchTargetSizeCheck" />

                            <TextView
                                android:id="@+id/panErrorText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:fontFamily="@font/poppins"
                                android:gravity="center_vertical"
                                android:lineSpacingExtra="-1sp"
                                android:text="Invalid PAN"
                                android:visibility="invisible"
                                android:textColor="#ffff4d4f" />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/dobLayout"
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:layout_height="match_parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/panLayout" >

                            <TextView
                                android:id="@+id/dobTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins"
                                android:gravity="center_vertical"
                                android:lineSpacingExtra="-1sp"
                                android:text="Date of Birth/Incorporation*"
                                android:textColor="@android:color/black" />

                            <EditText
                                android:id="@+id/dobEditText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/edittext_bg"
                                android:fontFamily="@font/poppins"
                                android:gravity="center_vertical"
                                android:hint="mm-dd-yyyy"
                                android:inputType="text"
                                android:padding="8dp"
                                android:textColor="#000000"
                                android:textColorHint="#7F7D83"
                                android:textSize="14sp"
                                tools:ignore="TouchTargetSizeCheck" />

                            <TextView
                                android:id="@+id/dobErrorText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:fontFamily="@font/poppins"
                                android:gravity="center_vertical"
                                android:lineSpacingExtra="-1sp"
                                android:text="Invalid DOB/Incorporation"
                                android:visibility="invisible"
                                android:textColor="#ffff4d4f" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/addressLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:textColor="@android:color/black"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/dobLayout" >
                            <TextView
                                android:id="@+id/countryTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins"
                                android:gravity="center_vertical"
                                android:lineSpacingExtra="-1sp"
                                android:text="Country*"
                                android:textColor="@android:color/black"/>

                            <com.boxpay.checkout.sdk.adapters.InstantAutoComplete
                                android:id="@+id/countryEditText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:background="@drawable/edittext_bg"
                                android:fontFamily="@font/poppins"
                                android:gravity="center_vertical"
                                android:layout_marginStart="2dp"
                                android:layout_marginEnd="2dp"
                                android:hint="Country"
                                android:inputType="text"
                                android:padding="8dp"
                                android:textColor="#000000"
                                android:textColorHint="#7F7D83"
                                android:textSize="14sp"
                                tools:ignore="TouchTargetSizeCheck" />

                            <TextView
                                android:id="@+id/countryErrorText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:fontFamily="@font/poppins"
                                android:gravity="center_vertical"
                                android:lineSpacingExtra="-1sp"
                                android:text="Required"
                                android:visibility="invisible"
                                android:textColor="#ffff4d4f"/>

                            <TextView
                                android:id="@+id/postalCodeTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:fontFamily="@font/poppins"
                                android:gravity="center_vertical"
                                android:lineSpacingExtra="-1sp"
                                android:text="ZIP/Postal Code*"
                                android:textColor="@android:color/black"/>

                            <EditText
                                android:id="@+id/postalCodeEditText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:background="@drawable/edittext_bg"
                                android:fontFamily="@font/poppins"
                                android:gravity="center_vertical"
                                android:layout_marginStart="2dp"
                                android:layout_marginEnd="2dp"
                                android:hint="ZIP/Postal Code"
                                android:inputType="number"
                                android:padding="8dp"
                                android:textColor="#000000"
                                android:textColorHint="#7F7D83"
                                android:textSize="14sp"
                                tools:ignore="TouchTargetSizeCheck" />

                            <TextView
                                android:id="@+id/postalCodeErrorText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:fontFamily="@font/poppins"
                                android:gravity="center_vertical"
                                android:lineSpacingExtra="-1sp"
                                android:text="Invalid Postal Code"
                                android:visibility="invisible"
                                android:textColor="#ffff4d4f"/>


                            <TextView
                                android:id="@+id/stateTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:fontFamily="@font/poppins"
                                android:gravity="center_vertical"
                                android:lineSpacingExtra="-1sp"
                                android:text="State*"
                                android:textColor="@android:color/black"/>
                            <EditText
                                android:id="@+id/stateEditText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:background="@drawable/edittext_bg"
                                android:fontFamily="@font/poppins"
                                android:gravity="center_vertical"
                                android:hint="State"
                                android:layout_marginStart="2dp"
                                android:layout_marginEnd="2dp"
                                android:inputType="text"
                                android:padding="8dp"
                                android:textColor="#000000"
                                android:textColorHint="#7F7D83"
                                android:textSize="14sp"
                                tools:ignore="TouchTargetSizeCheck" />

                            <TextView
                                android:id="@+id/stateErrorText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:fontFamily="@font/poppins"
                                android:gravity="center_vertical"
                                android:lineSpacingExtra="-1sp"
                                android:text="Required"
                                android:visibility="invisible"
                                android:textColor="#ffff4d4f" />


                            <TextView
                                android:id="@+id/cityTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:fontFamily="@font/poppins"
                                android:gravity="center_vertical"
                                android:lineSpacingExtra="-1sp"
                                android:text="City*"
                                android:textColor="@android:color/black"/>

                            <EditText
                                android:id="@+id/cityEditText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:background="@drawable/edittext_bg"
                                android:fontFamily="@font/poppins"
                                android:gravity="center_vertical"
                                android:hint="City"
                                android:layout_marginStart="2dp"
                                android:layout_marginEnd="2dp"
                                android:inputType="text"
                                android:padding="8dp"
                                android:textColor="#000000"
                                android:textColorHint="#7F7D83"
                                android:textSize="14sp"
                                tools:ignore="TouchTargetSizeCheck" />

                            <TextView
                                android:id="@+id/cityErrortext"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:fontFamily="@font/poppins"
                                android:gravity="center_vertical"
                                android:lineSpacingExtra="-1sp"
                                android:text="Required"
                                android:visibility="invisible"
                                android:textColor="#ffff4d4f" />

                            <TextView
                                android:id="@+id/addressTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:fontFamily="@font/poppins"
                                android:gravity="center_vertical"
                                android:lineSpacingExtra="-1sp"
                                android:text="House number, Apartment *"
                                android:textColor="@android:color/black"/>

                            <EditText
                                android:id="@+id/addressEditText1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:background="@drawable/edittext_bg"
                                android:fontFamily="@font/poppins"
                                android:gravity="center_vertical"
                                android:hint="House number, Apartment "
                                android:inputType="text"
                                android:layout_marginStart="2dp"
                                android:layout_marginEnd="2dp"
                                android:padding="8dp"
                                android:textColor="#000000"
                                android:textColorHint="#7F7D83"
                                android:textSize="14sp"
                                tools:ignore="TouchTargetSizeCheck" />

                            <TextView
                                android:id="@+id/address1ErrorText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:fontFamily="@font/poppins"
                                android:gravity="center_vertical"
                                android:lineSpacingExtra="-1sp"
                                android:text="Required"
                                android:visibility="invisible"
                                android:textColor="#ffff4d4f" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="2dp"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/addressTextView2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins"
                                    android:gravity="center_vertical"
                                    android:lineSpacingExtra="-1sp"
                                    android:text="Area, Colony, Street, Sector "
                                    android:textColor="@android:color/black" />

                                <TextView
                                    android:id="@+id/addressTextViewOptional2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins"
                                    android:gravity="center_vertical"
                                    android:lineSpacingExtra="-1sp"
                                    android:text="(optional)"
                                    android:textColor="#80323232" />
                            </LinearLayout>

                            <EditText
                                android:id="@+id/addressEditText2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:background="@drawable/edittext_bg"
                                android:fontFamily="@font/poppins"
                                android:gravity="center_vertical"
                                android:hint="Area, Colony, Street, Sector"
                                android:inputType="text"
                                android:padding="8dp"
                                android:layout_marginStart="2dp"
                                android:layout_marginEnd="2dp"
                                android:textColor="#000000"
                                android:textColorHint="#7F7D83"
                                android:textSize="14sp"
                                tools:ignore="TouchTargetSizeCheck" />
                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.core.widget.NestedScrollView>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/proceedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                app:cardCornerRadius="7dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <RelativeLayout
                    android:id="@+id/proceedButtonRelativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/disable_button_bg"
                    android:padding="12dp">

                    <ProgressBar
                        android:id="@+id/progressBar"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_centerInParent="true"
                        android:indeterminateDrawable="@drawable/loader_01"
                        android:rotation="90"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Continue"
                        android:textColor="#ADACB0"
                        android:textSize="16sp" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout></androidx.coordinatorlayout.widget.CoordinatorLayout>

