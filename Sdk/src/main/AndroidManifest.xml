<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.boxpay.checkout.sdk">

    <!-- Queries section for UPI apps like GPay, PhonePe, and Paytm -->
    <queries>
        <!-- Example Store and Services (existing entries) -->
        <package android:name="com.example.store" />
        <package android:name="com.example.services" />

        <!-- GPay -->
        <package android:name="com.google.android.apps.nbu.paisa.user" />

        <!-- PhonePe -->
        <package android:name="com.phonepe.app" />

        <!-- Paytm -->
        <package android:name="net.one97.paytm" />
    </queries>
    <uses-feature
    android:name="android.hardware.telephony"
    android:required="false" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />


    <application
        android:theme="@style/AppTheme">
        <activity
            android:name=".TestingPurpose"
            android:exported="false" />
        <activity
            android:name=".FailureScreenForTesting"
            android:exported="false" />
        <activity
            android:name=".SuccessScreenForTesting"
            android:exported="false" />
        <activity
            android:name=".OTPScreenWebView"
            android:exported="false" />
        <activity
            android:name=".Check"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:exported="false" />

        <receiver android:name=".SmsReceiver"
            android:exported="true">
            <intent-filter>
                <!-- Specify the intent action -->
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>


        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>

</manifest>